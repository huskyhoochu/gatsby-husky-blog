{
  "name": "husky-blog",
  "description": "Huskyhoochu's tech blog",
  "license": "MIT",
  "scripts": {
    "develop": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "prettier": "prettier --single-quote --arrow-parens always --write",
    "lint": "eslint --fix",
    "removeUrl": "now rm -y",
    "deploy": "./scripts/deploy.sh"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "yarn prettier",
      "yarn lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ./scripts/image_optimization.sh $HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "./scripts/add_issue_number_into_commit.sh $HUSKY_GIT_PARAMS",
      "post-merge": "./scripts/deploy.sh"
    }
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.8.0",
    "gatsby": "next",
    "gatsby-plugin-google-analytics": "next",
    "gatsby-plugin-offline": "next",
    "gatsby-plugin-react-helmet": "next",
    "gatsby-plugin-sharp": "next",
    "gatsby-plugin-sitemap": "next",
    "gatsby-plugin-styled-components": "next",
    "gatsby-remark-copy-linked-files": "next",
    "gatsby-remark-images": "next",
    "gatsby-remark-prismjs": "next",
    "gatsby-source-filesystem": "next",
    "gatsby-transformer-remark": "next",
    "gatsby-transformer-sharp": "next",
    "lodash": "^4.17.11",
    "minireset.css": "^0.0.3",
    "prismjs": "^1.15.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-adsense": "^0.0.6",
    "react-dom": "^16.6.0",
    "react-facebook": "^5.0.3",
    "react-helmet": "^5.2.0",
    "styled-components": "^3.4.10",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.4",
    "prettier": "1.14.3"
  }
}
